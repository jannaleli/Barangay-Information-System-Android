<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_login_user"
        tools:context=".LoginUser">


    <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_labelColor="#666"
            app:mtf_image="@drawable/ic_notifications_black_24dp"
            android:id="@+id/materialTextField"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="55dp" android:layout_marginRight="55dp"
            app:layout_constraintBottom_toTopOf="@+id/submitLoginButton"/>


    <Button
            android:text="Submit"
            android:layout_width="218dp"
            android:layout_height="45dp"
            android:id="@+id/submitLoginButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="36sp"
            android:fontFamily="sans-serif-light" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="55dp" android:layout_marginStart="55dp" android:layout_marginTop="110dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="Sign in to continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
    />
    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="312dp"
            android:layout_height="68dp"
            app:met_baseColor="#B9CF5858"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="20"
            app:met_primaryColor="?colorAccent"
            app:met_singleLineEllipsis="true"
            android:layout_marginTop="34dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp" android:textColor="#B9CF5858" android:hint="Username"
            android:id="@+id/loginUsername"
            app:layout_constraintBottom_toTopOf="@+id/loginPassword"/>

    <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="314dp"
            android:layout_height="68dp"
            android:hint="Password"
            app:met_baseColor="#B9CF5858"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="20"
            app:met_primaryColor="?colorAccent"
            android:id="@+id/loginPassword" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/submitLoginButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="69dp" android:layout_marginStart="69dp" android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/loginUsername"/>

</androidx.constraintlayout.widget.ConstraintLayout>

